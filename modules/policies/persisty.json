{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "Persist",
        "Action": [
          "iam:CreateAccessKey",
          "iam:CreateUser",
          "iam:DeleteAccessKey"
        ],
        "Effect": "Allow",
        "Resource": "arn:aws:iam::*:user/${aws:username}"
      }
    ]
  }